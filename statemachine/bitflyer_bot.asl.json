{
  "Comment": "This is your state machine",
  "StartAt": "Get BTC/JPY rate",
  "States": {
    "Get BTC/JPY rate": {
      "Type": "Task",
      "Resource": "${BitflyerTickersFunctionArn}",
      "Parameters": {
        "ProductCodes": [ "BTC_JPY", "ETH_JPY" ]
      },
      "Next": "SNS Publish"
    },
    "SNS Publish": {
      "Type": "Task",
      "Resource": "arn:aws:states:::sns:publish",
      "Parameters": {
        "Message.$": "$",
        "TopicArn": "${SNSTopicArn}"
      },
      "End": true
    }
  }
}
